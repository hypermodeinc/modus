{
  "name": "@hypermode/modus-cli",
  "version": "",
  "description": "The Modus CLI",
  "author": "Hypermode Inc.",
  "license": "Apache-2.0",
  "homepage": "https://github.com/hypermodeinc/modus",
  "repository": "github:hypermodeinc/modus",
  "bugs": {
    "url": "https://github.com/hypermodeinc/modus/issues"
  },
  "keywords": [
    "Hypermode",
    "Modus",
    "CLI"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "modus": "./bin/modus.js"
  },
  "scripts": {
    "pack": "npm pack",
    "lint": "eslint .",
    "build": "rm -rf dist && tsc -b",
    "watch": "rm -rf dist && tsc -b -w",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "npm i && npm run build && oclif manifest"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.3.3",
    "@oclif/core": "^4",
    "@scarf/scarf": "^1.4.0",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "gradient-string": "^3.0.0",
    "ky": "^1.7.5",
    "open": "^10.1.0",
    "ora": "^8.2.0",
    "picomatch": "^4.0.2",
    "semver": "^7.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@oclif/test": "^4",
    "@types/node": "^22",
    "@types/picomatch": "^3.0.2 || ^4.0.0",
    "@types/semver": "^7.5.8",
    "eslint": "^9.22.0",
    "oclif": "^4",
    "ts-node": "^10",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "oclif": {
    "bin": "modus",
    "helpClass": "./dist/custom/help",
    "dirname": "modus",
    "commands": "./dist/commands",
    "hooks": {
      "init": "./dist/hooks/init"
    },
    "topicSeparator": " ",
    "topics": {
      "sdk": {
        "description": "Modus SDK Management"
      },
      "runtime": {
        "description": "Modus Runtime Management"
      }
    },
    "additionalHelpFlags": [
      "-h"
    ],
    "additionalVersionFlags": [
      "-v"
    ]
  },
  "scarfSettings": {
    "allowTopLevel": true
  }
}
