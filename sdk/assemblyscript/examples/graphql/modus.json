{
  "$schema": "https://schema.hypermode.com/modus.json",
  "endpoints": {
    "default": {
      "type": "graphql",
      "path": "/graphql",
      "auth": "bearer-token"
    }
  },
  "connections": {
    // This defines the dgraph host that is used by the example functions.
    // The {{AUTH_TOKEN}} will be replaced by the secret provided in the Hypermode Console.
    "dgraph": {
      "type": "http",
      "endpoint": "https://blue-sky.cloud.dgraph.io/graphql",
      "headers": {
        "X-Auth-Token": "{{AUTH_TOKEN}}"
      }
    }
  }
}
