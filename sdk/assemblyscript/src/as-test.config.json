{
  "input": ["./assembly/__tests__/*.spec.ts"],
  "outDir": "./build",
  "config": "./asconfig.json",
  "plugins": {
    "coverage": false
  },
  "buildOptions": {
    "args": [
      "--config ./node_modules/@hypermode/modus-sdk-as/plugin.asconfig.json",
      "--lib ./node_modules/json-as/lib",
      "--runtime stub"
    ],
    "target": "bindings"
  },
  "runOptions": {
    "runtime": {
      "name": "node",
      "run": "node ./build/<name>.run.js"
    }
  }
}
