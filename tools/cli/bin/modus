# This ensures that node > $NODE_MIN is installed
# It first checks which node and if it is <= $NODE_MIN, it installs node
# It can use Node on PATH or a local build of node

clear_line() {
    echo -ne "\033[F\033[K"
}

get_script_dir() {
    SOURCE="${BASH_SOURCE[0]}"
    DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
    echo "$DIR"
}

# Config
NODE_WANTED=22.9.0
NODE_MIN=22
NODE_PATH="$(which node)"
NODE_INSTALL_PATH="$DIR/node-bin"

# Properties
ARCH="$(uname -m)"
OS="$(uname -s | tr '[:upper:]' '[:lower:]')"
DIR=$(get_script_dir)

BASE_DIR="${DIR:0:-4}"
NODE_MODULES_PATH="$BASE_DIR/node_modules/"
PATH_FILE="$DIR/scripts/modus-path"
LOCAL_FILE="$DIR/scripts/modus-local"

case $ARCH in
aarch64) ARCH="arm64" ;;
x86_64) ARCH="x64" ;;
armv6l) ARCH="arm" ;;
*) ;;
esac

fexists() {
    [ -f "$1" ]
}

install_node() {
    download_file="node-v$NODE_WANTED-$OS-$ARCH.tar.gz"
    download_url="https://nodejs.org/dist/v$NODE_WANTED/$download_file"
    echo "Installing node from $download_url"
    temp_dir="$DIR/.temp"

    rm -rf $temp_dir
    mkdir $temp_dir
    curl --progress-bar --show-error --location --fail "$download_url" \
        --output "$temp_dir/$download_file"
    clear_line
    clear_line
    echo "Unpacking archive"
    tar -xf "$temp_dir/$download_file" -C "$temp_dir"
    rm -rf $download_file
    rm -rf $NODE_INSTALL_PATH
    mkdir -p $NODE_INSTALL_PATH
    mv "$temp_dir/node-v$NODE_WANTED-$OS-$ARCH/"* "$NODE_INSTALL_PATH/"
    chmod +x "$NODE_INSTALL_PATH/bin/node"
    chmod +x "$NODE_INSTALL_PATH/bin/npm"
    rm -rf $temp_dir
    NODE_PATH="$NODE_INSTALL_PATH/bin/node"
    clear_line
}

check_node() {
    if ! fexists "$NODE_INSTALL_PATH/bin/node"; then
        NODE_VERSION=$($NODE_PATH -v 2>/dev/null)
        if [ $? -ne 0 ]; then
            install_node
            return 1
        fi
        NODE_VERSION=${NODE_VERSION#v}
        MAJOR_VERSION=${NODE_VERSION%%.*}
        if [ "$MAJOR_VERSION" -le $NODE_MIN ]; then
            install_node
            return 1
        fi
    fi
    return 0
}

install_deps() {
    if [ ! -d "$NODE_MODULES_PATH" ]; then
        echo "Installing dependencies with npm"
        if command -v npm >/dev/null 2>&1; then
            npm --prefix "$BASE_DIR" install >/dev/null 2>&1
            clear_line
        else
            $NODE_INSTALL_PATH/bin/npm --prefix "$BASE_DIR" install >/dev/null 2>&1
            clear_line
        fi
    fi
}

if ! check_node; then
    if ! fexists $LOCAL_FILE; then
        mkdir -p "$DIR/scripts/"
        echo "#!$DIR/node-bin/bin/node
import { execute } from \"@oclif/core\";
await execute({ dir: import.meta.url });" >$LOCAL_FILE
        chmod +x $LOCAL_FILE
    fi
    install_deps
    env "$LOCAL_FILE" "$@"
else
    if ! fexists $PATH_FILE; then
        mkdir -p "$DIR/scripts/"
        echo "#!/usr/bin/env node
import { execute } from \"@oclif/core\";
await execute({ dir: import.meta.url });" >$PATH_FILE
        chmod +x $PATH_FILE
    fi
    install_deps
    env "$PATH_FILE" "$@"
fi
