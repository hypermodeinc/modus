{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Hypermode Runtime (local)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "args": [
        "--dgraph=http://localhost:8080",
        "--refresh=1s",
      ]
    },
    {
      "name": "Hypermode Runtime (AWS)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "env": {
        "AWS_REGION": "us-west-2",
        "AWS_PROFILE": "sandbox",
        "AWS_SDK_LOAD_CONFIG": "true"
      },
      "args": [
        "--dgraph=http://localhost:8080",
        "--useAwsSecrets",
        "--useAwsStorage",
        "--s3bucket=${input:s3bucket}",
        "--s3path=${input:s3folder}",
        "--refresh=1s",
      ]
    },
  ],
  "inputs": [
    {
      "id": "s3bucket",
      "type": "promptString",
      "description": "Enter the S3 bucket name",
      "default": "sandbox-runtime-storage"
    },
    {
      "id": "s3folder",
      "type": "promptString",
      "description": "Enter the S3 storage folder name",
      "default": "shared"
    },
  ]
}
