        "FORCE_COLOR": "1",
        "MODUS_ENV": "dev",
        "MODUS_DEBUG": "true",
        "MODUS_DB": "postgresql://postgres:postgres@localhost:5433/my-runtime-db?sslmode=disable" // checkov:skip=CKV_SECRET_4
      },
      "args": [
        "--refresh=1s",
        "--appPath",
        "${workspaceFolder}/sdk/${input:appLanguage}/examples/${input:exampleApp}/build"
