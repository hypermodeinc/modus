{
  // Test valid manifest file
  "$schema": "https://schema.hypermode.com/modus.json",
  "endpoints": {
    "default": {
      "type": "graphql",
      "path": "/graphql",
      "auth": "bearer-token"
    }
  },
  "models": {
    "model-1": {
      "sourceModel": "example/source-model-1",
      "provider": "hugging-face",
      "connection": "hypermode"
    },
    "model-2": {
      "sourceModel": "source-model-2",
      "connection": "my-model-connection",
      "path": "path/to/model-2"
    },
    "model-3": {
      "sourceModel": "source-model-3",
      "connection": "my-model-connection"
    }
  },
  "connections": {
    "my-model-connection": {
      "type": "http",
      "baseUrl": "https://models.example.com/",
      "headers": {
        "X-API-Key": "{{API_KEY}}"
      }
    },
    "another-model-connection": {
      "type": "http",
      "endpoint": "https://models.example.com/full/path/to/model-3",
      "headers": {
        "X-API-Key": "{{API_KEY}}"
      }
    },
    "my-graphql-api": {
      "type": "http",
      "endpoint": "https://api.example.com/graphql",
      "headers": {
        "Authorization": "Bearer {{AUTH_TOKEN}}"
      }
    },
    "my-rest-api": {
      "type": "http",
      "baseUrl": "https://api.example.com/v1/",
      "queryParameters": {
        "api_token": "{{API_TOKEN}}"
      }
    },
    "another-rest-api": {
      "type": "http",
      "baseUrl": "https://api.example.com/v2/",
      "headers": {
        "Authorization": "Basic {{base64(USERNAME:PASSWORD)}}"
      }
    },
    "neon": {
      "type": "postgresql",
      "connString": "postgresql://{{POSTGRESQL_USERNAME}}:{{POSTGRESQL_PASSWORD}}@1.2.3.4:5432/data?sslmode=disable"
    },
    "my-dgraph-cloud": {
      "type": "dgraph",
      "grpcTarget": "frozen-mango.grpc.eu-central-1.aws.cloud.dgraph.io:443",
      "key": "{{DGRAPH_KEY}}"
    },
    "local-dgraph": {
      "type": "dgraph",
      "grpcTarget": "localhost:9080"
    },
    "my-neo4j": {
      "type": "neo4j",
      "dbUri": "bolt://localhost:7687",
      "username": "{{NEO4J_USERNAME}}",
      "password": "{{NEO4J_PASSWORD}}"
    }
  },
  "collections": {
    "collection1": {
      "searchMethods": {
        "searchMethod1": {
          "embedder": "embedder1"
        },
        "searchMethod2": {
          "embedder": "embedder1",
          "index": {
            "type": "hnsw",
            "options": {
              "efConstruction": 100,
              "maxLevels": 3
            }
          }
        }
      }
    }
  }
}
